<% include ../partials/header %>

<table>
	<tr>
		<th>Champion</th><th>Opponent</th><th>Kills</th><th>Deaths</th><th>Assists</th><th>Build</th><th>W / L</th>
	</tr>
	<% for (var i = 0; i < matches.length; i++) { %>
    <tr>
      <td><%= matches[i].champion %></td>
      <td><%= matches[i].opponent %></td>
      <td><%= matches[i].kills %></td>
      <td><%= matches[i].deaths %></td>
      <td><%= matches[i].assists %></td>
      <td><%= matches[i].build %></td>
      <td><%= matches[i].result %></td>
    </tr>
   <% } %>
</table>

 <form action="/matches/id" method="POST">

  <div class="form-group">
    <div class="form-group">
      <label for="name">Summoner Name:</label>
      <input class="form-control" type="text" name="name" id="name" placeholder="XXXX XXX XXX" required>
    </div>
  </div>
  <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block">Submit!</button>
  </div>
</form>

<%console.log(matches)%>
<% while(matches.length > 0){ %>
  <table>
    <tr>
      <th>Champion</th<th>Name</th><th>Kills</th><th>Deaths</th><th>Assists</th><th>Build</th><th>W / L</th>
      <tr>
        <td><%= matches[0]['100'][0].champion %></td>
        <td><%= matches[0]['100'][0].summonerName %></td>
        <td><%= matches[0]['100'][0].stats.kills %></td>
        <td><%= matches[0]['100'][0].stats.deaths %></td>
        <td><%= matches[0]['100'][0].stats.assists %></td>
        <td><%= matches[0]['100'][0].build %></td>
      </tr>

    </tr>
  </table>
<% } %>
